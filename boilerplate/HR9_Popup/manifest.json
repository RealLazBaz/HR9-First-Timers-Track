{
	"manifest_version": 2, 
	"name": "My first extension!",
	"version": "0.1",
  	"browser_action": {
  		"default_title": "Sample Extension",
    	"default_icon": "icon.png",
    	"default_popup": "popup.html"
  	}, 
  	"permissions": [
		  "activeTab",
		  "tabs",
		  "storage"
	  ],
	  
	  "background":
	  {
		  "scripts" : ["background.js"],
		  "persistent" : false
	  }
}